<h1>Referees</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @referees.each do |referee| %>
      <tr>
        <td><%= referee.full_name %></td>
        <td><%= referee.email %></td>
        <td><%= referee.phone_number %></td>
        <td>
          <%= link_to "Edit", edit_referee_path(referee) %>
          <%= button_to "Delete", referee_path(referee), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Referee", new_referee_path %>
