<div class="container-index">

  <h1>Referees</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @referees.each do |referee| %>
        <tr>
          <td><%= link_to referee.full_name, referee_path(referee) %></td>
          <td><%= referee.email %></td>
          <td><%= referee.phone_number %></td>
          <td>
            <%= link_to "Edit", edit_referee_path(referee) %>
            <%= link_to "Delete", referee_path(referee), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add Referee", new_referee_path %>

</div>
